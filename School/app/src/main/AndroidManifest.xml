<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tando.school">

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/MyTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".loadPreferenceActivity"
            android:label="Preference"
            android:parentActivityName=".MainActivity"
            android:theme="@style/PreferenceScreen" />
        <activity
            android:name=".AboutTheApp"
            android:label="School App"
            android:parentActivityName=".loadPreferenceActivity"
            android:theme="@style/customTheme"></activity>
        <activity android:name=".MySchoolAccount"
            android:label="Account"
            android:theme="@style/customTheme"
            android:parentActivityName=".MainActivity"></activity>
    </application>

</manifest>